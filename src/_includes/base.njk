{% set layoutName = layout.slice(0, -4) %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>-</title>

    <link rel="stylesheet" href="/css/main.css" />
    <script src="/js/rooter.js" defer></script>
    <script src="/components/site-nav.js" type="module"></script>
   <script src="/components/post-lister.js" type="module"></script> 
  </head>
  <body>
    <button  id="update-sw" onclick="activateUpdate()" style="display: none; position: fixed; z-index: 1000; ">update</button>

    <header style="z-index: 100">
      <site-nav id="site-nav" class="test" current-route="{{page.url}}"></site-nav>
    </header>

    <main data-page="{{ page.filePathStem }}">
      {{ content | safe }}
    </main>

    {% if not env.dev %}
      {% include "partials/registerSw.njk" %}
    {% endif %}

    <script>
      async function activateUpdate() {
        const registration = await navigator
          .serviceWorker
          .getRegistration();
        registration
          .waiting
          .postMessage({type: "SKIP_WAITING"});
      }
    </script>
  </body>
</html>